{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
<h1 class="Admin">Message</h1>

<table class="table Admin">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ message.id }}</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ message.content }}</td>
        </tr>
        <tr>
            <th>PublicationDate</th>
            <td>{{ message.publicationDate ? message.publicationDate|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ message.status }}</td>
        </tr>
        <tr>
            <th>Ip</th>
            <td>{{ message.ip }}</td>
        </tr>
    </tbody>
</table>
<div class="Admin centre margin">
    <a href="{{ path('message_index') }}"><button class="btn" title="Retour Ã  la liste"><i class="fas fa-reply"></i></button></a>
    <a href="{{ path('message_edit', {'id': message.id}) }}"><button class="btn" title="Editer"><i class="fa fa-pen"></i></button></a>
</div>
<div class="Admin centre margin">
    {{ include('message/_delete_form.html.twig') }}
</div>
{% endblock %}