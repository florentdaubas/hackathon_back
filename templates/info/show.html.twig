{% extends 'base.html.twig' %}

{% block title %}Info{% endblock %}

{% block body %}
    <h1 class="Admin">Info</h1>

    <table class="table Admin">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ info.id }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ info.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ info.longitude }}</td>
            </tr>
            <tr>
                <th>PublicationDate</th>
                <td>{{ info.publicationDate ? info.publicationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ info.endDate ? info.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ info.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ info.description }}</td>
            </tr>
        </tbody>
    </table>
<div class="Admin centre margin">
