{% extends 'base-public.html.twig' %}

{% block main %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    
    <div class="jumbotron jumbotron-fluid">

        <div class="container Admin">
            <h1>Connexion</h1>
            <form action="{{ path('login') }}" method="post">

                <div class="form-group">
                        <label for="username">Pseudonyme:</label>
                        <input type="text" class="form-control" id="username" placeholder="Entrer votre pseudo" name="_username" value="{{ last_username }}">
                </div>

                <div class="form-group">
                    <label for="pwd">Mot de passe:</label>
                    <input type="password" class="form-control" id="password" placeholder="Entrer votre mot de passe" name="_password">
                </div>

                {#---------------------Login:  Ajouter <input type="hidden" name="_csrf_token"... -------------------------#}
                <!-- SECURITE CSRF A RAJOUTER -->
                <input type="hidden" class="form-control" name="_csrf_token" value="{{ csrf_token('authenticate') }}">                   
                {#-------------------------------------Se rendre dans secutityController-----------------------------------#} 

                {# <div class="checkbox">
                    <label><input type="checkbox" name="remember"> Remember me</label>
                </div> #}

                <button type="submit" class="btn btn-success">Se connecter</button>
                <p><a href="{{ path('password-revovery') }}" ><button class="btn">MDP oubli√©</button></a></a></p>

            </form>
        </div>
    </div> 
                     
{% endblock %}