{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}
    <h1 class="Admin">Catégorie</h1>

    <table class="table Admin">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>
<div class="Admin centre margin">
    <a href="{{ path('category_index') }}"><button class="btn">Retour à la liste</button></a>
    <a href="{{ path('category_edit', {'id': category.id}) }}"><button class="btn">Edition</button>
</div>
<div class="Admin centre margin">
    {{ include('category/_delete_form.html.twig') }}
 </div>   
{% endblock %}
