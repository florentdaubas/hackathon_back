{% extends 'base.html.twig' %}

{% block title %}Membres{% endblock %}

{% block body %}
    <h1 class="Admin">Membres</h1>
<div class="Admin centre margin">
    <a href="{{ path('member_new') }}"><button class="btn" title="Ajouter"><i class="fa fa-plus"></i></button></a>
</div>
    <table class="table Admin">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Password</th>
                <th>Email</th>
                <th>Role</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for member in members %}
            <tr>
                <td>{{ member.id }}</td>
                <td>{{ member.username }}</td>
                <td>{{ member.password }}</td>
                <td>{{ member.email }}</td>
                <td>{{ member.role }}</td>
                <td>
                    <a href="{{ path('member_show', {'id': member.id}) }}"><button class="btn" title="Consulter"><i class="fa fa-eye"></i></button></a>
                    <a href="{{ path('member_edit', {'id': member.id}) }}"><button class="btn" title="Editer"><i class="fa fa-pen"></i></button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun enregistrement trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<div class="Admin centre margin">
    <a href="{{ path('member_new') }}"><button class="btn" title="Ajouter"><i class="fa fa-plus"></i></button></a>
</div>
{% endblock %}
